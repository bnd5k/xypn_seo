<%= content_tag :div, class: "container" do %>

  <%= content_tag :div, class: "row" do %>

    <%= content_tag :div, (content_tag :h1, "XYPN Scraper"), class: "col-sm-12 text-center" %>

  <% end %>

  <%= content_tag :div, class: "row" do %>
    <%= content_tag :div, class: "col-sm-12" do %>

      <table class="table table-striped table-condensed">

        <tr>
          <th>Advisor</th>
          <th>Business</th>
          <th>XYPN Profile</th>
          <th>Website</th>
          <th>
            Desktop
            <a href="/?sort=desktop_asc">&#8593;</a>
            <a href="/?sort=desktop_desc">&#8595;</a>
          </th>
          <th>
            Mobile
            <a href="/?sort=mobile_asc">&#8593;</a>
            <a href="/?sort=mobile_desc">&#8595;</a>
          </th>
        </tr>

        <% @websites.each do | website | %>
          <tr>
            <td><%= website.advisor %></td>
            <td><%= website.business %></td>
            <td><%= link_to "Profile", website.xypn_profile, :target => '_blank' %></td>
            <td><%= link_to "#{website.url}", website.url, :target => '_blank' %></td>
            <td><%= website.desktop_score %></td>
            <td><%= website.mobile_score %></td>
          </tr>
        <% end %>

      </table>

    <% end %>
  <% end %> <!-- row -->

<% end %> <!-- container -->